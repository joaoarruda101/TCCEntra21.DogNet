@page
@model DogNet.Pages.Admin.InstituicoesCRUD.IncluirModel
@{
}

<main class="container mt-3">
    <div class="row justify-content-md-center">
        <div class="col-sm-12">
            <h1>@ViewData["titulo"]</h1>
            <hr />
            <form method="post" class="mt-3">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <fieldset>
                    <legend>Dados Pessoais</legend>
                    <div class="form-group">
                        <label asp-for="Instituicoes.Nome" class="control-label"></label>
                        <input asp-for="Instituicoes.Nome" class="form-control col-6" />
                        <span asp-validation-for="Instituicoes.Nome" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Instituicoes.CNPJ" class="control-label"></label>
                        <span>(somente números)</span>
                        <input asp-for="Instituicoes.CNPJ" class="form-control col-2" />
                        <span asp-validation-for="Instituicoes.CNPJ" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Instituicoes.Pix" class="control-label">PIX</label>
                        <input asp-for="Instituicoes.Pix" class="form-control col-2" />
                        <span asp-validation-for="Instituicoes.Pix" class="text-danger"></span>
                    </div>
                </fieldset>
                <fieldset>
                    <legend>Contatos</legend>
                    <div class="form-group">
                        <label asp-for="Instituicoes.Email" class="control-label"></label>
                        <input asp-for="Instituicoes.Email" class="form-control col-4" />
                        <span asp-validation-for="Instituicoes.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Instituicoes.Telefone" class="control-label"></label>
                        <span>(com DDD, somente números)</span>
                        <input asp-for="Instituicoes.Telefone" class="form-control col-2" placeholder="28999887766" />
                        <span asp-validation-for="Instituicoes.Telefone" class="text-danger"></span>
                    </div>
                </fieldset>
                <fieldset>
                    <legend>Endereço</legend>

                    <div class="form-group">
                        <label asp-for="Instituicoes.Endereco.CEP" class="control-label"></label>
                        <input asp-for="Instituicoes.Endereco.CEP" class="form-control col-2" />
                        <span asp-validation-for="Instituicoes.Endereco.CEP" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Instituicoes.Endereco.Logradouro" class="control-label"></label>
                        <input asp-for="Instituicoes.Endereco.Logradouro" class="form-control col-2" />
                        <span asp-validation-for="Instituicoes.Endereco.Logradouro" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Instituicoes.Endereco.Bairro" class="control-label"></label>
                        <input asp-for="Instituicoes.Endereco.Bairro" class="form-control col-2" />
                        <span asp-validation-for="Instituicoes.Endereco.Bairro" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Instituicoes.Endereco.Cidade" class="control-label"></label>
                        <input asp-for="Instituicoes.Endereco.Cidade" class="form-control col-2" />
                        <span asp-validation-for="Instituicoes.Endereco.Cidade" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Instituicoes.Endereco.Estado" class="control-label"></label>
                        <input asp-for="Instituicoes.Endereco.Estado" class="form-control col-2" />
                        <span asp-validation-for="Instituicoes.Endereco.Estado" class="text-danger"></span>
                    </div>


                    <div class="form-group">
                        <label asp-for="Instituicoes.Endereco.Numero" class="control-label"></label>
                        <input asp-for="Instituicoes.Endereco.Numero" class="form-control col-2" />
                        <span asp-validation-for="Instituicoes.Endereco.Numero" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Instituicoes.Endereco.Complemento" class="control-label"></label>
                        <input asp-for="Instituicoes.Endereco.Complemento" class="form-control col-4" />
                        <span asp-validation-for="Instituicoes.Endereco.Complemento" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Instituicoes.Endereco.Referencia" class="control-label"></label>
                        <input asp-for="Instituicoes.Endereco.Referencia" class="form-control col-4" />
                        <span asp-validation-for="Instituicoes.Endereco.Referencia" class="text-danger"></span>
                    </div>
                </fieldset>
                <legend>Descrição</legend>
                <textarea class="form-control col-6" rows="6" data-val="true" data-val-maxlength="O campo &quot;Descrição&quot; pode ter até 1000 caracteres." data-val-maxlength-max="1000" data-val-required="O campo &quot;Descrição&quot; é de preenchimento obrigatório." id="Produto_Descricao" maxlength="1000" asp-for="Instituicoes.Description"></textarea>
                <div class="form-group text-left">
                    <a asp-page="./Listar" class="btn btn-info">Cancelar</a>
                    <input type="submit" value="Salvar" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</main>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    @{await Html.RenderPartialAsync("_CustomConfirm");}
    @{await Html.RenderPartialAsync("_ConsultaCEP");}
}